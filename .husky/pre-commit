echo "🔍 Running checks before commit..."

# Run tests
echo "✅ Running tests..."
npm test
if [ $? -ne 0 ]; then
  echo "❌ Tests failed. Aborting commit."
  exit 1
fi

# Run lint
echo "✅ Running lint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ Lint failed. Aborting commit."
  exit 1
fi

echo "🎉 All checks passed. Proceeding with commit!"
